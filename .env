# MIA.vn Google Integration Platform - Environment Template
# Copy this file to .env.local and update with your actual values

# Google Services Configuration
REACT_APP_GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here
REACT_APP_GOOGLE_SHEETS_SPREADSHEET_ID=your_spreadsheet_id_here

# Google Service Account (REQUIRED)
GOOGLE_SERVICE_ACCOUNT_EMAIL=your-service-account@your-project.iam.gserviceaccount.com
GOOGLE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYOUR_PRIVATE_KEY_HERE\n-----END PRIVATE KEY-----"
GOOGLE_SERVICE_ACCOUNT_KEY_PATH=path/to/your/service-account-key.json
VITE_GOOGLE_SHEETS_SPREADSHEET_ID=your_spreadsheet_id_here

# Telegram Bot Configuration (Optional)
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_WEBHOOK_URL=your_webhook_url_here
TELEGRAM_CHAT_ID=your_chat_id_here

# Email Service Configuration (Required for notifications)
SENDGRID_API_KEY=your_sendgrid_api_key_here
SENDGRID_FROM_EMAIL=your-email@your-domain.com
SENDGRID_FROM_NAME=Your App Name
EMAIL_FROM=your-email@your-domain.com

# SMTP Configuration (Alternative to SendGrid)
SMTP_HOST=your_smtp_host
SMTP_PORT=587
SMTP_USER=your_smtp_username
SMTP_PASS=your_smtp_password

# Google Apps Script (Optional)
VITE_GOOGLE_APPS_SCRIPT_URL=your_apps_script_url_here

# Application Configuration
NODE_ENV=development
PORT=3004

# Redis Queue Configuration
REDIS_URL=redis://localhost:6379

# Web Push Configuration
WEB_PUSH_PUBLIC_KEY=your_web_push_public_key
WEB_PUSH_PRIVATE_KEY=your_web_push_private_key
WEB_PUSH_VAPID_SUBJECT=mailto:admin@your-domain.com

# Google Project Details (from service account)
GOOGLE_PROJECT_ID=your-project-id
GOOGLE_PRIVATE_KEY_ID=your_private_key_id
GOOGLE_CLIENT_ID=your_client_id
GOOGLE_AUTH_URI=https://accounts.google.com/o/oauth2/auth
GOOGLE_TOKEN_URI=https://oauth2.googleapis.com/token
GOOGLE_AUTH_PROVIDER_X509_CERT_URL=https://www.googleapis.com/oauth2/v1/certs
GOOGLE_CLIENT_X509_CERT_URL=https://www.googleapis.com/robot/v1/metadata/x509/your-service-account%40your-project.iam.gserviceaccount.com
GOOGLE_UNIVERSE_DOMAIN=googleapis.com
